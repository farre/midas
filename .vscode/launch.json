{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Extension -- non-threads",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"${workspaceFolder}/test/cppworkspace/test"
			]
		},
		{
			"name": "Run Extension -- threaded project",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"${workspaceFolder}/test/cppworkspace/thread"
			]
		},
		{
			"name": "Debug extension - mozilla-central",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"/home/cx/dev/opensource/mozilla-central"
			]
		},
		{
			"name": "Debug extension - test attach",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"${workspaceFolder}/test/cppworkspace/attach"
			]
		},
		{
			"name": "Extension Tests",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionTestsPath=${workspaceFolder}/test/suite/index"
			]
		}
	]
}
