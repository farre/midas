{
  "name": "midas",
  "displayName": "midas",
  "description": "Midas: A GDB/MI Visual Studio Code Debug Adapter",
  "keywords": ["gdb", "midas", "debug"],
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.61.0"
  },
  "categories": [
    "Debuggers"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./extension.js",
  "publisher": "farrese",
  "contributes": {
    "breakpoints": [
      {
        "language": "c"
      },
      {
        "language": "cpp"
      }
    ],
    "commands": [
      {
        "command": "midas.start",
        "title": "start"
      },
      {
        "command": "midas.stop",
        "title": "stop"
      },
      {
        "command": "midas.get-binary",
        "title": "get binary"
      },
      {
        "command": "midas.start-debug-session",
        "title": "start debugging"
      },
      {
        "command": "midas.stop-debug-session",
        "title": "stop debugging"
      },
      {
        "command": "midas.session-continue-all",
        "title": "Continue all threads",
        "shortTitle": "Continue All",
        "icon": "$(debug-continue)"
      },
      {
        "command": "midas.session-pause-all",
        "title": "Pause all threads",
        "shortTitle": "Pause all",
        "icon": "$(debug-pause)"
      }
    ],

    "menus": {
      "debug/toolBar": [{
        "command": "midas.session-continue-all",
        "group": "midas",
        "when": "!midas.allStopModeSet"
      },
      {
        "command": "midas.session-pause-all",
        "group": "midas",
        "when": "!midas.allStopModeSet"
      }]
    },
    "debuggers": [
      {
        "type": "midas",
        "label": "C/C++ Midas GDB",
        "languages": ["c", "cpp", "cuda-cpp"],
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "program": {
              "type": "string",
              "description": "binary to debug"
            },
            "stopOnEntry": {
              "type": "boolean",
              "description": "Set breakpoint on main",
              "default": true
            },
            "trace": {
              "type": "boolean",
              "description": "Turns logging on or off",
              "default": false
            },
            "debugeeArgs": {
              "type": "string[]",
              "description": "Command line arguments passed to debuggee",
              "default": []
            },
            "allStopMode": {
              "type": "boolean",
              "description": "Whether or not GDB should run in all stop mode",
              "default": false
            },
            "gdbPath": {
              "type": "string",
              "description": "Path to gdb executable or command",
              "default": "gdb"
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "midas",
            "request": "launch",
            "name": "${1:Launch Debug}",
            "program": "${workspaceFolder}/${2:binary}",
            "stopOnEntry": true,
            "trace": false,
            "allStopMode": false
          }
        ],
        "configurationSnippets": [
          {
            "label": "midas: Launch",
            "description": "Launches midas debugging session for binary selected by user",
            "body": {
              "type": "midas",
              "request": "launch",
              "name": "${1:Launch Debug}",
              "program": "^\"\\${workspaceFolder}/${2:binary}\"",
              "stopOnEntry": true,
              "trace": false,
              "allStopMode": false
            }
          }
        ]
      },
      {
        "type": "midas-rr",
        "label": "C/C++ Midas GDB w/rr",
        "languages": ["c", "cpp", "cuda-cpp"],
        "configurationAttributes": {
          "launch": {
            "required": [ "program", "MIServerAddress", "rrPath", "debuggerPath"],
            "program": {
              "type": "string",
              "description": "binary to debug"
            },
            "stopOnEntry": {
              "type": "boolean",
              "description": "Set breakpoint on main",
              "default": false
            },
            "MIServerAddress": {
              "type": "string",
              "description": "Connection string to GDB server; format host:port",
              "default": "localhost:50505"
            },
            "cwd": {
              "type": "string",
              "description": "Current working directory",
              "default": "^\"\\${workspaceFolder}\""
            },
            "trace": {
              "type": "boolean",
              "description": "Turns logging on or off",
              "default": false
            },
            "rrPath": {
              "type": "string",
              "description": "Path to rr. Defaults to trying to execute rr in $PATH",
              "default": "rr"
            },
            "debuggerPath": {
              "type": "string",
              "description": "Path to GDB. Defaults to trying to execute GDB in $PATH",
              "default": "gdb"
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "midas-rr",
            "request": "launch",
            "name": "Debug w/rr",
            "program": "${workspaceFolder}/path/to/binary",
            "stopOnEntry": false,
            "trace": false,
            "MIServerAddress": "localhost:50505",
            "cwd": "${workspaceFolder}"
          }
        ],
        "configurationSnippets": [
          {
            "label": "midas: Launch",
            "description": "Launches midas debugging session for binary selected by user",
            "body": {
              "type": "midas-rr",
              "request": "launch",
              "name": "Debug w/rr",
              "program": "${workspaceFolder}/path/to/binary",
              "debuggerPath": "gdb",
              "rrPath": "rr",
              "stopOnEntry": false,
              "trace": false,
              "MIServerAddress": "localhost:50505",
              "cwd": "${workspaceFolder}"
            }
          }
        ]
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/eslint-parser": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.61.0",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "typescript": "^4.4.4"
  },
  "author": {
    "name": "Andreas Farre",
    "email": "andreas@farre.se"
  },
  "maintainers": [
    {
      "name": "Andreas Farre",
      "email": "andreas@farre.se"
    },
    {
      "name": "Simon Farre",
      "email": "simon.farre.cx@gmail.com"
    }
  ],
  "dependencies": {
    "await-notify": "^1.0.1",
    "gdb-js": "^1.3.0",
    "regenerator-runtime": "^0.13.9",
    "@vscode/debugadapter": "^1.51.0",
    "@vscode/debugprotocol": "^1.51.0",
    "vscode-debugadapter-testsupport": "^1.50.0"
  }
}
