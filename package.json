{
  "name": "midas",
  "displayName": "midas",
  "description": "Midas: A GDB/MI Visual Studio Code Debug Adapter",
  "keywords": [
    "gdb",
    "midas",
    "debug"
  ],
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.61.0"
  },
  "categories": [
    "Debuggers"
  ],
  "activationEvents": [
    "onDebug"
  ],
  "main": "./extension.js",
  "publisher": "farrese",
  "repository": {
    "type": "git",
    "url": "https://github.com/farre/midas"
  },
  "contributes": {
    "breakpoints": [
      {
        "language": "c"
      },
      {
        "language": "cpp"
      }
    ],
    "commands": [
      {
        "command": "midas.rr-record",
        "title": "Record the execution of a binary",
        "shortTitle": "rr Record"
      },
      {
        "command": "midas.session-continue-all",
        "title": "Continue all threads",
        "shortTitle": "Continue All",
        "icon": "$(debug-continue)"
      },
      {
        "command": "midas.session-pause-all",
        "title": "Pause all threads",
        "shortTitle": "Pause all",
        "icon": "$(debug-pause)"
      },
      {
        "command": "midas.reverse-finish",
        "title": "Reverse finish",
        "shortTitle": "Reverse finish",
        "icon": "$(debug-step-out)"
      },
      {
        "command": "midas.set-watchpoint",
        "title": "Set read-access watchpoint",
        "shortTitle": "Watch variable",
        "icon": "$(eye-watch)"
      }
    ],
    "menus": {
      "debug/variables/context": [
        {
          "command": "midas.set-watchpoint",
          "group": "midas"
        }
      ],
      "debug/toolBar": [
        {
          "command": "midas.session-continue-all",
          "group": "midas",
          "when": "!midas.allStopModeSet"
        },
        {
          "command": "midas.session-pause-all",
          "group": "midas",
          "when": "!midas.allStopModeSet"
        },
        {
          "command": "midas.reverse-finish",
          "group": "midas",
          "when": "midas.rrSession"
        }
      ]
    },
    "debuggers": [
      {
        "type": "midas",
        "label": "C/C++ Midas GDB",
        "languages": [
          "c",
          "cpp",
          "cuda-cpp"
        ],
        "configurationAttributes": {
          "launch": {
            "type": "object",
            "default": {},
            "required": [
              "program"
            ],
            "program": {
              "type": "string",
              "description": "binary to debug"
            },
            "stopOnEntry": {
              "type": "boolean",
              "description": "Set breakpoint on main",
              "default": true
            },
            "trace": {
              "type": "boolean",
              "description": "Turns logging on or off",
              "default": false
            },
            "debugeeArgs": {
              "type": "string[]",
              "description": "Command line arguments passed to debuggee",
              "default": []
            },
            "allStopMode": {
              "type": "boolean",
              "description": "Whether or not GDB should run in all stop mode",
              "default": false
            },
            "debuggerPath": {
              "type": "string",
              "description": "Path to GDB. Defaults to trying to execute GDB in $PATH",
              "default": "gdb"
            },
            "cwd": {
              "type": "string",
              "description": "Current working directory of GDB",
              "default": "${workspaceFolder}"
            },
            "replay": {
              "type": "object",
              "properties": {
                "rrPath": {
                  "type": "string",
                  "description": "Path to rr. Defaults to trying to execute rr in $PATH",
                  "default": "rr"
                },
                "rrServerAddress": {
                  "type": "string",
                  "description": "Connection string to GDB server; format host:port"
                },
                "tracePath": {
                  "type": "string",
                  "description": "trace workspace. Can be found running the rr command `rr ls`"
                },
                "startEventRequest": {
                  "type": "boolean",
                  "description": "Request event to start debugging from with user input",
                  "default": false
                }
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "midas",
            "request": "launch",
            "name": "Debug binary",
            "program": "${workspaceFolder}/${2:binary}",
            "stopOnEntry": true,
            "trace": false,
            "allStopMode": false,
            "cwd": "${workspaceFolder}"
          },
          {
            "type": "midas",
            "request": "launch",
            "name": "Launch replay session",
            "program": "${workspaceFolder}/${2:binary}",
            "stopOnEntry": true,
            "trace": false,
            "cwd": "${workspaceFolder}",
            "replay": {
              "rrPath": "rr",
              "rrServerAddress": "localhost:50505",
              "startEventRequest": false
            }
          }
        ],
        "configurationSnippets": [
          {
            "name": "midas",
            "label": "midas: Launch",
            "description": "Launches midas debugging session for binary selected by user",
            "body": {
              "type": "midas",
              "request": "launch",
              "name": "${1:Launch Debug}",
              "program": "^\"\\${workspaceFolder}/${2:binary}\"",
              "cwd": "^\"\\${workspaceFolder}\"",
              "stopOnEntry": true,
              "trace": false,
              "allStopMode": false
            }
          },
          {
            "name": "midas",
            "label": "midas with rr: Launch",
            "description": "Launches midas debugging session against an rr replay",
            "body": {
              "type": "midas",
              "request": "launch",
              "name": "${1:Launch Debug}",
              "program": "^\"\\${workspaceFolder}/${2:binary}\"",
              "cwd": "^\"\\${workspaceFolder}\"",
              "stopOnEntry": true,
              "trace": false,
              "debuggerPath": "gdb",
              "replay": {
                "rrPath": "rr",
                "rrServerAddress": "localhost:50505",
                "startEventRequest": false
              }
            }
          }
        ]
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js",
    "package": "vsce package --yarn"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/eslint-parser": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.61.0",
    "@vscode/test-electron": "^1.6.2",
    "@vscode/debugadapter-testsupport": "^1.50.0",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "typescript": "^4.4.4"
  },
  "author": {
    "name": "Andreas Farre",
    "email": "andreas@farre.se"
  },
  "maintainers": [
    {
      "name": "Andreas Farre",
      "email": "andreas@farre.se"
    },
    {
      "name": "Simon Farre",
      "email": "simon.farre.cx@gmail.com"
    }
  ],
  "dependencies": {
    "await-notify": "^1.0.1",
    "gdb-js": "^1.3.0",
    "regenerator-runtime": "^0.13.9",
    "@vscode/debugadapter": "^1.51.0",
    "@vscode/debugprotocol": "^1.51.0"
  }
}